                                        @Html.LabelFor(model => model.LogoPath, htmlAttributes: new { @class = "control-label " })
                                    </div>
                                    <div class="col-md-6">
                                        <input type="file" id="UploadFilePath" name="UploadFilePath" class="btn" required data-bv-notempty-message="Must upload file" />
