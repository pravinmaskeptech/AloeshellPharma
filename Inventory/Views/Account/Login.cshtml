@using Inventory.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "";
}
<!DOCTYPE html>

<html>

<head>
    <style>
        body {
        }
    </style>
    <title>Welcome to Aloeshell Pharmaa..</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Custom Theme files -->
    <link href='~/Content/bootstrap.min.css' media='all' rel='stylesheet'>
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" href="~/Content/animate.min.css">
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'><!--web font-->
    <!-- //web font -->
</head>
<body>
    <script src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js'></script>
    <script src="//m.servedby-buysellads.com/monetization.js" type="text/javascript"></script>

    <body>
        <!-- main-agileits -->
        @*<img src="~/Photo/Reverse_logistics-2.jpg" />*@
        <div class="agileits">
            @*<h1><img src="~/Photo/OriginalLogo.png" width="250" /></h1>*@
            <div class="bg-img">
                <div class="w3-agileits-info">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form animate-form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <img src="~/Photo/OriginalLogo.png" width="195" />
                        <hr />

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class='form-group has-feedback w3ls'>
                            <label class='control-label sr-only' for='username'>Username</label>
                            <input class='form-control' id='UserName' name='UserName' placeholder='Username' type='text'>
                            <span class='glyphicon glyphicon-ok form-control-feedback'></span>
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class='form-group has-feedback agile'>
                            <label class='control-label sr-only' for='password'>Password</label>
                            <input class='form-control w3l' id='Password' name='Password' placeholder='Password' type='password'><span class='glyphicon glyphicon-ok form-control-feedback'></span>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <input type="hidden" name="failcount" value="@ViewBag.failcount" />

                        if (ViewBag.failcount >= 3)
                        {
                            <div style="margin-bottom: 25px" class="input-group col-md-offset-2">
                                <img src="/Account/GetCaptchaImage" title="Captcha" />
                                <br />
                            </div>
                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input id="clientCaptcha" type="text" class="form-control" name="clientCaptcha" placeholder="Input Image Numbers">
                            </div>
                            <p style="font-weight:bold;color:red;">@ViewBag.CaptchaError</p>
                        }
                        <div class='submit w3-agile'>
                            <input class='btn btn-lg' type='submit' value='SUBMIT'>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- //agileits -->
        <!-- copyright -->
        <div class="w3-agile-copyright">
            @*<p class="agileinfo"> © 2018 Micraft Solutions. All rights reserved  </p>*@
            <p class="agileinfo"> © 2018 Micraft Solutions. All rights reserved  </p>

        </div>
        <!-- //copyright -->
        <!-- js -->
        <script src="~/Scripts/jquery-3.1.1.min.js"></script>
        <script src='~/Scripts/jquery.validate.min.js'></script>
        <script src='~/Scripts/formAnimation.js'></script>
        <script src='~/Scripts/shake.js'></script>
        <!-- //js -->
    </body>
</html>